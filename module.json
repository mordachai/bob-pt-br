{
  "id":"bob-pt-br",
  "title":"Band of Blades - Português (Brasil)",
  "description":"Módulo do Foundry VTT de tradução para o idioma português do Brasil do RPG de mesa Band of Blades",
  "version":"1.0.4",
  "authors": [
    {"name":"Mestre Digital (código)" },
    {"name":"Gus (tradução)"}
  ],
  
  "minimumCoreVersion":"10",
  "compatibleCoreVersion":"11",
  
  "compatibility": {
    "minimum": "1.0.1",
    "verified": "11"
  },

  "esmodules": ["babele-register.js"],
  
  "languages":[
      {
         "lang": "pt-BR",
         "name": "Português (Brasil)",
         "path": "pt-br.json"
      }
  ],

  "relationships": {
    "systems": [{
      "id": "band-of-blades",
      "type": "system",
      "manifest": "https://raw.githubusercontent.com/drewg13/foundryvtt-band-of-blades/main/system.json",
      "compatibility": {
        "verified": "1.5.0"
      }
    }],
    "requires": [{
      "id": "babele",
      "type": "module",
      "manifest": "https://gitlab.com/riccisi/foundryvtt-babele/raw/master/module/module.json",
      "compatibility": {
        "verified": "2.3.4"
      }
    }]
  },

  "packs": [
    {
      "name": "tabelas",
      "label": "Tabelas",
      "path": "packs/tabelas.db",
      "type": "RollTable",
      "module": "bid-pt-br",
      "private": false
    },
    {
      "name": "macros",
      "label": "Macros - BiD - Pt-Br",
      "path": "packs/macros.db",
      "type": "Macro",
      "module": "bid-pt-br",
      "private": false
    },
    {
      "name": "ajuda-da-traducao",
      "label": "Ajuda da Tradução",
      "path": "packs/ajuda-da-traducao.db",
      "type": "JournalEntry",
      "module": "bid-pt-br",
      "private": false
    }      
  ],

  "url":"https://github.com/mordachai/bob-pt-br",
  "manifest": "https://raw.githubusercontent.com/mordachai/bob-pt-br/main/module.json",
  "download": "https://github.com/mordachai/bob-pt-br/archive/refs/heads/main.zip"
 
}
